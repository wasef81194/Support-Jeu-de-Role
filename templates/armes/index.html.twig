    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Arme</th>
                <th>Competence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for arme in armes %}
            <tr>
                <td>{{ arme.id }}</td>
                <td>{{ arme.arme }}</td>
                <td>{{ arme.competence }}</td>
                <td>
                    <a href="{{ path('app_armes_show', {'id': arme.id}) }}">show</a>
